<h1>Species Record List</h1>
<%= link_to 'New Species Record', new_record_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @records.each do |record| %>
    <tr>
      <td><%= record.title %></td>
      <td><%= record.text %></td>
	  <td><%= link_to 'Show', record_path(record) %></td>
      <td><%= link_to 'Edit', edit_record_path(record) %></td>
	  <td><%= link_to 'Destroy', record_path(record), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>